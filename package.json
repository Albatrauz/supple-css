{
  "name": "supple",
  "version": "3.1.0",
  "description": "In-browser (S)CSS framework; Fluid, Variable, supple if you will",
  "main": "src/index.scss",
  "repository": "https://github.com/supple-css/supple.git",
  "author": "Bram Smulders <bram@bramsmulders.com>",
  "license": "MIT",
  "keywords": [
    "supple",
    "css",
    "scss",
    "itcss",
    "grid",
    "framework",
    "bem"
  ],
  "scripts": {
    "test": "npm run lint && npm run build && npm run gzip",
    "lint": "stylelint \"**/*.scss\"",
    "gzip": "gzip-size test/css/index.css",
    "postcss": "postcss -c postcss.config.js -o test/css/index.css test/css/index.css",
    "sass": "npm run sass:test",
    "sass:test": "sass src/test.scss test/css/test.css --precision 8",
    "sass:index": "sass src/index.scss test/css/index.css --precision 8",
    "build": "npm run sass && npm run postcss"
  },
  "browserslist": [
    "> 2%",
    "not op_mini all",
    "not dead"
  ],
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "cssnano": "^4.1.10",
    "glob": "^7.1.6",
    "gzip-size-cli": "^3.0.0",
    "postcss": "^7.0.27",
    "postcss-cli": "^7.1.1",
    "postcss-normalize": "^9.0.0",
    "sass": "^1.26.5",
    "stylelint": "^13.3.3",
    "stylelint-config-supple": "^2.1.0",
    "stylelint-scss": "^3.17.1"
  },
  "dependencies": {
    "sass-mq": "^5.0.1"
  }
}
