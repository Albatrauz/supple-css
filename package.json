{
  "name": "supple",
  "version": "4.0.0",
  "description": "In-browser (S)CSS framework; Fluid, Variable, supple if you will",
  "main": "lib/index.scss",
  "repository": "https://github.com/supple-css/supple.git",
  "author": "Bram Smulders <bram@bramsmulders.com>",
  "license": "MIT",
  "keywords": [
    "supple",
    "css",
    "scss",
    "itcss",
    "grid",
    "framework",
    "bem"
  ],
  "scripts": {
    "test": "npm run lint && npm run build && npm run gzip",
    "lint": "stylelint \"**/*.scss\"",
    "gzip": "gzip-size test/css/index.css",
    "postcss": "postcss test/css/**/*.css --replace",
    "sass": "sass lib/index.scss:test/css/index.css test/scss/test.scss:test/css/test.css --no-source-map",
    "build": "npm run sass && npm run postcss",
    "start": "nodemon -e scss -x \"npm run test\""
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "cssnano": "^4.1.10",
    "glob": "^7.1.6",
    "gzip-size-cli": "^3.0.0",
    "nodemon": "^2.0.4",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "sass": "^1.26.8",
    "stylelint": "^13.6.0",
    "stylelint-config-supple": "^3.0.3",
    "stylelint-scss": "^3.17.2"
  }
}
